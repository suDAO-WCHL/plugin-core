{
  "name": "@sudao-wchl/plugin-core",
  "private": false,
  "version": "0.0.2",
  "description": "Core package to develop plugin for suDAO",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./ui": {
      "import": "./dist/ui/index.js"
    },
    "./hooks": {
      "import": "./dist/hooks/index.js"
    },
    "./registry": {
      "import": "./dist/registry/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite --config vite.dev.config.ts",
    "build": "tsc -b ./tsconfig.lib.json && vite build --config vite.build.config.ts",
    "prepublishOnly": "npm run build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "@icp-sdk/core": "^4.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.2.1",
    "vite-plugin-lib-inject-css": "^2.1.1"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suDAO-WCHL/plugin-core.git"
  },
  "keywords": [
    "sudao",
    "icp",
    "plugin"
  ],
  "author": "suDAO Developers",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/suDAO-WCHL/plugin-core/issues"
  },
  "homepage": "https://github.com/suDAO-WCHL/plugin-core#readme"
}
